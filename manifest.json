{
  "name": "MuteOne Capture",
  "description": "Capture tab audio, save as WAV, or send directly to MuteOne Web.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "tabCapture",
    "downloads",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://muteone.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MuteOne Capture"
  },
  "background": {
    "service_worker": "polyfill.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
